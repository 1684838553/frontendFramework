{
    "name": "Chrome Extension AI",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "谷歌插件 API 的使用",
    "permissions": [
        "activeTab",
        "scripting",
        "windows",
        "tabs",
        "runtime",
        "action",
        "notifications",
        "sidePanel"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "谷歌插件 API 的使用"
    },
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
	"devtools_page": "devtools.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "minimum_chrome_version": "137",
    "default_locale": "zh_CN",
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    }
}